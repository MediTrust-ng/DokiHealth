import { useEffect } from "react";
import  {supabase} from "@/app/lib/supabaseClient";

export default function ConsultWatcher() {
  useEffect(() => {
    const channel = supabase
      .channel("assigned")
      .on(
        "postgres_changes",
        { event: "UPDATE", schema: "public", table: "profile" },
        async (payload) => {
          if (payload.new?.is_assigned === true) {
            // Instead of an external webhook, React handles it here
            console.log("Webhook triggered in React:", payload.new);
          }
        }
      )
      .subscribe();

    return () => {
      supabase.removeChannel(channel);
    };
  }, []);

  return null;
}
